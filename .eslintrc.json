{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier", "plugin:compat/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "consistent-return": "off",
    "no-unused-vars": "warn",
    "no-param-reassign": [2, { "props": false }],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
  }
}
